@using CoreDepartmanPersonel.Models
@model List<departmanlar>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}



<table class="table table-bordered mt-3">

    <tr>
        <th>ID</th>
        <th>Departman</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.departid</td>
            <td>@item.departmanad</td>
            <td><a asp-controller="depart" asp-action="DepartmanSil" asp-route-id="@item.departid" class="btn btn-danger">Sil</a></td>
            <td><a asp-controller="depart" asp-action="DepartmanGetir" asp-route-id="@item.departid" class="btn btn-success">Güncelle</a></td>
            <td><a asp-controller="depart" asp-action="DepartmanDetay" asp-route-id="@item.departid" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }

</table>
<a asp-controller="depart" asp-action="YeniDepartman" class="btn btn-secondary">Yeni Departman</a>

